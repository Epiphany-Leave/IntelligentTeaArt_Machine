/* 新增全局字体和基础色调 */
page {
  --primary-color: #3d7ef9;
  --success-color: #52c41a;
  --warning-color: #faad14;
  --error-color: #ff4d4f;
  --text-primary: #303133;
  --text-secondary: #909399;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', sans-serif;
}

.page-container {
  padding: 32rpx;
  background: #f8fafd;
  min-height: 100vh;
}

/* 头部区域升级 */
.header-container {
  background: linear-gradient(135deg, var(--primary-color), #6a9eff);
  border-radius: 32rpx;
  padding: 48rpx 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(61, 126, 249, 0.2);
  position: relative;
  overflow: hidden;
}

.header-container::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 8rpx;
  background: linear-gradient(90deg, transparent 20%, rgba(255,255,255,0.3) 50%, transparent 80%);
}

.header-1 {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: rgba(255,255,255,0.9);
  margin-bottom: 40rpx;
}

.header-2 {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 56rpx;
  margin: 48rpx 0;
  text-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.header-3 {
  font-size: 26rpx;
  color: rgba(255,255,255,0.85);
  text-align: center;
}

/* 数据卡片视觉升级 */
.data-container {
  margin-top: 48rpx;
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(320rpx, 1fr));
  gap: 32rpx;
}

.data-item {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.04);
  transition: all 0.3s cubic-bezier(0.23, 1, 0.32, 1);
  position: relative;
  overflow: hidden;
}

.data-item:active {
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 32rpx rgba(0,0,0,0.1);
}

/* 卡片图标样式 */
.data-picture {
  width: 80rpx;
  height: 80rpx;
  margin-right: 24rpx;
  filter: drop-shadow(0 4rpx 8rpx rgba(61,126,249,0.2));
}

/* 数据文字排版优化 */
.data-text {
  flex: 1;
}

.data-title {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 16rpx;
  letter-spacing: 0.5rpx;
}

.data-value {
  font-size: 48rpx;
  font-weight: 600;
  font-family: 'DIN Alternate', sans-serif;
  color: var(--text-primary);
  display: flex;
  align-items: center;
}

/* 开关控件美化 */
.data-item switch {
  transform: scale(1.1);
  transform-origin: right center;
}

.data-item .wx-switch-input {
  background: #ebedf0 !important;
  border: 2rpx solid #dcdfe6 !important;
}

.data-item .wx-switch-input[checked] {
  background: var(--primary-color) !important;
  border-color: transparent !important;
}

/* 最后一个数据项特殊样式 */
.data-item:last-child {
  grid-column: 1 / -1;
  background: linear-gradient(135deg, var(--primary-color), #6a9eff);
  padding: 48rpx 32rpx;
}

.data-item:last-child .data-title {
  color: rgba(255,255,255,0.9);
  font-size: 32rpx;
}

.data-item:last-child .data-value {
  color: #fff;
  font-size: 56rpx;
}

.data-item:last-child::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg, rgba(255,255,255,0.3) 0%, rgba(255,255,255,0.15) 100%);
}

/* 状态颜色增强 */
.data-value[style*="color: #ff4d4f"] {
  color: var(--error-color) !important;
}

.data-value[style*="color: red"] {
  color: var(--error-color) !important;
}

/* 煮茶卡片专属样式 */
.tea-card {
  background: linear-gradient(135deg, #FFA726, #FF7043);
  padding: 32rpx;
  display: flex;
  align-items: center;
  grid-column: 1 / -1;
}

.tea-card .data-picture {
  width: 96rpx;
  height: 96rpx;
  margin-right: 32rpx;
  filter: brightness(1.1);
}

.tea-content {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.tea-text {
  display: flex;
  flex-direction: column;
}

.tea-status {
  font-size: 32rpx;
  color: rgba(255,255,255,0.9);
  margin-top: 8rpx;
}

.tea-switch {
  transform: scale(1.4);
  transform-origin: right center;
}

.tea-switch .wx-switch-input {
  background: rgba(255,255,255,0.3) !important;
  border-color: rgba(255,255,255,0.5) !important;
}

.tea-switch .wx-switch-input[checked] {
  background: #FFF !important;
  border-color: transparent !important;
}

/* 新增天气加载状态样式 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 60rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}